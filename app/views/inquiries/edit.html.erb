<% if current_user.current_mode == 'hunter' %>
    <h1> Edit Listing </h1>
    <%= render "form" %>
<% end %>

<% if current_user.current_mode == 'realtor' %>
    <h1> Reply to Listing </h1>
    <%= form_for [@house, @inquiry] do |f| %>
        <%= @inquiry.subject%> <br>
        <%= @inquiry.message%> <br>
        <%= @inquiry.user.name%> <br>
        <p>
        <%= f.label :reply %> <br>
        <%= f.text_area :reply%>
        </p>
        <p>
        <%= f.submit("Post Reply") %>
        </p>
    </p>
    <%end%>
<% end %>
